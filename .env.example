# Stagehand - AI browser automation
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# Portal credentials - the application under test
PORTAL_URL=https://your-portal.example.com
PORTAL_USERNAME=test-user
PORTAL_PASSWORD=test-password

# Linear webhook secret for signature verification
# Get this from Linear Settings > API > Webhooks
LINEAR_WEBHOOK_SECRET=your-linear-webhook-secret

# Linear API key for posting test results as comments
# Get this from Linear Settings > API > Personal API Keys
LINEAR_API_KEY=lin_api_your-linear-api-key

# Browserbase - Cloud browser automation (REQUIRED for production/Sevalla)
# Get these from https://browserbase.com/dashboard
# Leave empty for local development (uses local Chrome)
BROWSERBASE_API_KEY=
BROWSERBASE_PROJECT_ID=

# Server configuration
PORT=3000

# Max concurrent browser sessions (Chrome is resource-intensive)
MAX_CONCURRENT_TESTS=3
