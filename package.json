{
  "name": "linear-stagehand-tests",
  "version": "1.0.0",
  "description": "TypeScript server for running Stagehand browser tests triggered by Linear webhooks",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test:manual": "tsx src/test-manual.ts",
    "test:stagehand": "vitest run tests/stagehand",
    "test:stagehand:watch": "vitest tests/stagehand"
  },
  "keywords": [
    "stagehand",
    "linear",
    "browser-automation",
    "testing"
  ],
  "license": "MIT",
  "dependencies": {
    "@browserbasehq/stagehand": "^2.0.0",
    "@linear/sdk": "^73.0.0",
    "chalk": "^5.6.2",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "ora": "^9.1.0",
    "playwright": "^1.58.1",
    "vitest": "^4.0.18",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}
